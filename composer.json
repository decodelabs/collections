{
    "name": "decodelabs/collections",
    "description": "Reusable collection components",
    "type": "library",
    "keywords": ["collection", "data", "structure"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",

        "decodelabs/coercion": "^0.2",
        "decodelabs/exceptional": "^0.4",
        "decodelabs/fluidity": "^0.3",
        "decodelabs/gadgets": "^0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Collections\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.7.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
